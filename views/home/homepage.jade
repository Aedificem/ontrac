extends /layout

block content
  .container-fluid
    include /info
    .jumbotron.center-xs(style="margin-bottom: 0;")
      h1.no-margin(style="text-transform: capitalize")= "Good "+helpers.getGreetingTime(moment())+", " + currentUser.nickname
      p.visible-xs.no-margin It is #[b#clock Time & Date].
        if todaysInfo
          span.visible-xs Today is a #[b= todaysInfo.scheduleDay+"-Day"].
      if todaysInfo
        #classInfo
          p.larger Loading class info...          
    .row.center.visible-sm.visible-md.visible-lg
      .col-xs-12
        div.full-width(style="background-color: #222")
          each c in currentUser.courses
            a.btn.btn-default(href="http://moodle.regis.org/course/view.php?id="+c.mID, target="_blank")= c.title.split("(")[0]
    br
    .row
      .col-xs-12.col-md-6.col-lg-4#due-today
        .media
          .media-left.media-middle
            a(href="/work/today")
              img.media-object(style="width: 5em;", src="https://cdn3.iconfinder.com/data/icons/education/512/Booking-512.png")
          .media-body
            h4.media-heading Today's Work
            .content
      .col-xs-12.col-md-6.col-lg-4#due-closest(data-closest=moment(nextCD, "MM/DD/YY").format("YYYY-MM-DD"))
        .media
          .media-left.media-middle
            a(href="/work/closest")
              img.media-object(style="width: 5em;", src="https://cdn3.iconfinder.com/data/icons/education/512/Booking-512.png")
          .media-body
            h4.media-heading Upcoming Work
            .content
            .progress
              .progress-bar(role='progressbar', aria-valuemin='0', aria-valuemax='100', style='width: 0%;')
    hr
    .row
      .col-xs-12.col-md-6
        h3.no-margin Looking to talk with classmates?
        p.
          Install #[b #[a.undercorated(target="_blank", href="http://wiki.mumble.info/wiki/Main_Page#Download_Mumble") Mumble]],
          it'll only take seconds, and then
          #[b #[a.undecorated(href="mumble://"+currentUser.username+":regis@regismumble.ddns.net/School?version=1.2.0") Click Here]]
      .col-xs-12.col-md-6
        h3.no-margin Working?
        p
          | Need some music to relax to or do homework with? Look no further than
          b
            a(target="_blank", href="http://www.musicforprogramming.net")  here!
    .row
      .col-xs-12
        include tabs
    .row
      .col-xs-12
        br
        p.
          Now remember, OnTrac is in Alpha. This means it is nowhere near done.
          That explains this empty homepage.
    hr
