extends /layout

block content
  .container-fluid
    include /info
    .jumbotron.center-xs(style="margin-bottom: 0;")
      .col-xs-12.col-lg-6
        h1.no-margin(style="text-transform: capitalize")= "Good "+helpers.getGreetingTime(moment())+", " + currentUser.nickname
      .col-xs-12.col-lg-6.hidden-xs
        blockquote.quote
          p
            script(src="http://www.brainyquote.com/link/quotebr.js")
      .col-xs-12
        if todaysInfo
          span.visible-xs Today is a #[b= todaysInfo.scheduleDay+"-Day"].
      .clearfix
    
    .row.center
      .col-xs-12
        div.full-width(style="background-color: #222")
          a.btn.btn-default(href="http://intranet.regis.org/", target="_blank") Intranet
          a.btn.btn-default(href="http://moodle.regis.org/my/", target="_blank") Moodle
          a.btn.btn-default(href="https://owa.regis.org/owa/", target="_blank") Email
          a.btn.btn-default(href="https://myfiles.regis.org/", target="_blank") MyFiles
    if todaysInfo
      #classInfo
        p.larger Loading class info...
    hr
    .row
      if todaysInfo
        .col-xs-12.col-sm-6.col-md-4
          .panel.panel-primary#thoughtbox
            .panel-heading Daily Thoughts
              a.undecorated.fa.fa-list.right(href="/thoughts")
            form.form-inline(role="form", action="/thoughts", method="POST")
              textarea.form-control(rows="2", name="newThoughtsBody")= dailythought
              button.btn.btn-primary Update
      include work-boxes
      .col-xs-12.col-md-3.text-center
        .visible-sm.visible-md
          hr
          br
        include ads
    hr
    .row
      .col-xs-12
        include tabs
    .row
      .col-xs-12
        #work-calendar
    hr
