extends /layout

block content
  .container
    include /info
    .jumbotron
      h1.no-margin(style="text-transform: capitalize") Hello, #{currentUser.firstName}
      p.no-margin.magictime.swashIn.
        It is #[b#clock Time & Date]. Today is a #[b#today-sd ?] Schedule Day.
      span Only #[b= moment("2015-09-09").fromNow(true)] until school starts.
    .row
      .col-xs-12
        include tabs
    .row
      .col-xs-12.center
        img(style="height: 100%; max-height: 500px;", src="/images/graph.png")
    hr
    .row
      .col-xs-12.col-sm-6.col-md-4
        .panel.panel-default#reminders-panel
          .panel-heading
            h1.panel-title Friend Requests

          table.table.table-hover
            tr
              td Reminder1
              td Reminder1
            tr
              td Reminder1
              td Reminder1
    hr
