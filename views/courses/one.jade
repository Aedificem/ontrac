extends /layout

block content
  .container
    .page-header
      if course == false
        h1 No Such Course Exists
      else
        h1.left Course #{course.title}
          if course.teacher
            small.right Teacher #[a(href="/teachers/"+course.teacher.mID)= course.teacher.fullName}
      include /info

    .row
      .col-xs-12
        if course != false
          if course.teacher
            img(src=course.teacher.image, style="width: 150px")
        
    .row
      .col-xs-12
        hr
        a.btn.btn-default(href="http://moodle.regis.org/course/view.php?id="+course.mID, target="_blank") Moodle Page
        a.btn.btn-primary(href="/courses") Back to Courses
