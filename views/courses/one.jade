extends /layout

block content
  .container
    include /info
    .page-header
      if course == false
        h1 No Such Course Exists
      else
        h1 #[b Course] #{course.title}
          if course.teacher
            small.right.teacher-badge(data-username=course.teacher.username) Teacher #{course.teacher.fullName} 
      
    .row
      .col-xs-12
        if course != false
          if course.teacher
            img.teacher-badge(data-username=course.teacher.username, src=course.teacher.image, style="width: 150px")

    .row
      .col-xs-12
        .page-header
          h2 Enrolled Students
    
    .row
      .col-xs-12
        table.table.table-striped.user-table
          thead
            th Advisement
            th Grade
            th Name
          for user in course.students
            tr(class=(currentUser && user.username == currentUser.username ? "success" : ""))
              td.larger(style="vertical-align: middle;")
                a.undecorated(href="/advisements/"+user.advisement)= user.advisement
              td.larger(style="vertical-align: middle")= user.gradeName
              td.larger(style="vertical-align: middle;")= user.fullName
    
    .row
      .col-xs-12
        hr
        a.btn.btn-default(href="http://moodle.regis.org/course/view.php?id="+course.mID, target="_blank") Moodle Page
        a.btn.btn-primary(href="/courses") Back to Courses
