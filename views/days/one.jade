extends /layout

block content
  .container
    if date == false
      .page-header
        h1 Invalid Date
    else    
      .page-header
        h1= date.format("dddd, MMMM Do YYYY")
          small.right= fromNow
      .row
        .col-xs-12.text-center
          a.btn.btn-default(href="/days/"+previous) Previous Day
          a.btn.btn-default(href="/days/closest") Closest Day
          a.btn.btn-default(href="/days/today") Today
          a.btn.btn-default(href="/days/"+next) Next Day
        .col-xs-12.text-center
          if day != false
            b#schedule-day= day.scheduleDay 
      
      br
      hr
      br
      
      .row
        .col-xs-12.col-sm-6.col-md-4
          .panel.panel-default
            .panel-heading
              h1.panel-title Homework
            .panel-body
              b None!
            
        
        .col-xs-12.col-sm-6.col-md-4
          .panel.panel-default
            .panel-heading
              h1.panel-title Tests
            .panel-body
              b None!
        
        .col-xs-12.col-sm-6.col-md-4
          .panel.panel-default
            .panel-heading
              h1.panel-title Quizzes
            .panel-body
              b None!
              
        .col-xs-12.col-sm-6.col-md-4
          .panel.panel-default
            .panel-heading
              h1.panel-title Projects
            .panel-body
              b None!
      
