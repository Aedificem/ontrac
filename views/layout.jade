doctype html
html
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    meta(name="description", content="")
    meta(name="author", content="Frank Matranga")

    // Title is different for each page
    title= title

    // Bootstrap
    //link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css')
    //link(rel='stylesheet', href='https://bootswatch.com/paper/bootstrap.min.css')

    // Material Design
    link(rel='stylesheet', href='/stylesheets/materialize.min.css')

    // JQuery
    link(rel="stylesheet", href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.10.2/themes/black-tie/jquery-ui.css")

    // Font Awesome
    link(rel="stylesheet", href="http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css")

    // My own
    link(rel="stylesheet", href="/stylesheets/all.css")

  body
    header
      .navbar-fixed
        nav.red
          .nav-wrapper
            a.brand-logo.center(href="#") Adiutor
            a.button-collapse(href="#", data-activates="nav-mobile")
              i.mdi-navigation-menu(style="margin-left: 20px;")
            ul.side-nav#nav-mobile
              li(class=(title=="Adiutor" ? "active" : ""))
                a(href="/") Home
              li(class=(title=="Users" ? "active" : ""))
                a(href="/users") Users
              li
                a(href="#") Test
            ul.left.hide-on-med-and-down
              li.active
                a.mdi-action-home(href="/")
              li
                a(href="/users") Users
              li
                a(href="#") Test



            if loggedIn
                img.right#nav-bar-photo(src="https://webeim.regis.org/photos/regis/Student/"+currentUser.code+".jpg")
            else
              a(href="/login", style="height: 100%; padding-top: 7px")
                img.right#nav-bar-photo(src="http://gurucul.com/wp-content/uploads/2015/01/default-user-icon-profile.png")

            ul.right.hide-on-small-only
              if loggedIn
                li
                  a(href="#")= currentUser.fullName
              else
                li
                  a(href="/login") Not Logged In

    main
      .container
        block content

    script(src='http://code.jquery.com/jquery-2.1.4.min.js')
    script(src='http://code.jquery.com/ui/1.11.4/jquery-ui.min.js')
    script(src='/javascripts/materialize.min.js')
    script(src='/javascripts/effects.js')
