extends /layout

block content
  .container
    if teacher == false
      .page-header
        h1 That teacher does not exist!

      .row
        .col-xs-12
          a.btn.btn-default(href="/teachers") Teacher Index
    
    else
      .page-header
        h1= title
      .row
        .col-xs-12.col-sm-2
          img.teacher-profile-img(src=teacher.image)
        .col-xs-12.col-sm-10
          b Liked by _% of students.
      .row
        .col-xs-12
          hr
          button.btn.btn-success Like   
          button.btn.btn-danger Dislike
    
    .row
      .col-xs-12
        hr
        if teacher != false
          a.btn.btn-default(href="http://moodle.regis.org/user/profile.php?id="+teacher.mID, target="_blank") Moodle Page
        a.btn.btn-primary(href="/teachers") Back to Teachers
