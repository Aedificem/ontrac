extends /layout

block content
  .container
    include /info
    if teacher == false
      .page-header
        h1 That teacher does not exist!
    
    else
      .page-header
        h1 #[b Teacher] #{teacher.fullName}
      .row
        .col-xs-12.col-sm-2
          img.teacher-profile-img(src=teacher.image)
        .col-xs-12.col-sm-10
          b Going by #{teacher.ratingCount} unique ratings, this teacher is #{teacher.ratingString}.
      
      hr
      .col-xs-12.col-sm-6
        
        button.btn.btn-success.disabled(title="This is not one of your teachers!") Like   
        button.btn.btn-danger.disabled(title="This is not one of your teachers!") Dislike
    
    .row
        .col-xs-12
          hr
          h2 Classes
          br
          .teacher-classes
            for c in teacher.courses
              +class(c)
    
    .col-xs-12.col-sm-6
      if teacher != false
        a.btn.btn-default.right(href="http://moodle.regis.org/user/profile.php?id="+teacher.mID, target="_blank") Moodle Page
      a.btn.btn-primary.right(href="/teachers") Back to Teachers
    
mixin class(course)
  .col-xs-12.col-sm-6.col-md-4
    .panel.panel-default
      .panel-body
        h1.panel-title
          a(href="/courses/"+course.mID)= course.title
