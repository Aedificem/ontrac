aside#sidebar
  br
  section.center
    a(href="/users/"+currentUser.username)
      img#sidebar-pic(title="Looking good!", src="https://webeim.regis.org/photos/regis/Student/"+currentUser.code+".jpg", onError="this.onerror=null;this.src='"+currentUser.mpicture+"';")
    br
    #user-status.dropdown
      b.dropdown-toggle(data-toggle="dropdown") Loading...
        span.caret
      ul.dropdown-menu
        li
          a(href="#") Available
        li
          a(href="#") Working
        li
          a(href="#") Busy
        li
          a(href="#", title="You will not appear on the online users list.") Offline      
    #scheduleDaySidebar(data-toggle="tooltip", title="Today is a "+todaysInfo.scheduleDay+" Schedule Day.")
      hr(style="margin-bottom: 10px;")
      b.larger #{todaysInfo.scheduleDay} - Day
      hr(style="margin-top: 10px;")
    
  section
    ul.nav
      li(title="Manage your reminders.", data-toggle="tooltip")
        a(href="#", data-target="#reminders-modal", data-toggle="modal") Reminders
          span.label.label-primary.right#reminders-count &nbsp;
      li(class=(helpers.isPage(page, "grades") ? "active" : ""))
        a(data-toggle="tooltip", title="Manage your grades.", href="/grades") Grades
          span.label.label-success.right.fa.fa-check 
      li(class=(helpers.isPage(page, "work") ? "active" : ""))
        a(data-toggle="tooltip", href="/work", title="View all days that you have work (homework, tests, etc).") Work
          span.label.label-danger.right &nbsp;&nbsp;!&nbsp;&nbsp;
      li
        a(data-toggle="tooltip", href="/advisements/chat", title="Private chat room for your advisement!") #{currentUser.advisement} Chat
          span.label.label-default.right#advchat-badge 0
    hr
    
  
  if helpers.isPage(page, "days")
    section#day-controls(class=(helpers.isShort(previous, next)))
      span
        a(href="/days/today", title="View the work due today!") T
      span
        a(href="/days/closest", title="Find the closest day from today that you have work!") C
      
      if previous
        span
          a.fa.fa-arrow-left(href='/days/'+previous, title="View the previous day!")
      if next
        span
          a.fa.fa-arrow-right(href='/days/'+next, title="View the next day!")     
    hr
  
  if helpers.isPage(page, "/") == false || helpers.isPage(page, "/home") == false
    section#sidebar-class-info
      #sd-nowc
        b.larger Current Class
        
        br
        span#sidebar-now-class
        i.right#nowclass-room
        br
      #sd-nextc
        br
        b Next Class
        br
        span#sidebar-next-class
        i.right#nextclass-room
      hr
  
  b Online Now
    small.right#users-online
  section#online-list
